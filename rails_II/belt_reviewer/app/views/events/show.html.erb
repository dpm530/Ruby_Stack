<h1><%= @event.name %></h1>
<a href='/logout' data-method="delete">Logout</a><br>
<a href='/events'>Event Dashboard</a>
<hr>
<p>Host: <%= @event.user.first_name.titleize %> <%= @event.user.last_name.titleize %></p>
<p>Date: <%= @event.date %></p>
<p>Location: <%= @event.location.city.titleize %> <%= @event.location.state.titleize %></p>
<p>Poeple Joining the Event: <%= @event.users.count %></p>

<!-- Poeple who joined the event -->
<% unless @event.users.empty? %>
   <table class='table'>
      <thead>
         <tr>
            <th>Name</th>
            <th>Location</th>
            <th>State</th>
         </tr>
      </thead>
      <tbody>
         <tr>
            <% @event.users.each do |user| %>
               <td><%= user.first_name.titleize %> <%= user.last_name.titleize %></td>
               <td><%= user.location.city.titleize %></td>
               <td><%= user.location.state %></td>
            <% end %>
         </tr>
      </tbody>
   </table>
<% else %>
   <h4>No one joined your event.</h4>
<% end %>
<!-- end of poeple who joined the event -->
