<div class="row">
   <div class="col-1"></div>

   <!-- Lender Form -->
   <div class="col-5">
      <h2>Lender:</h2>
      <form action="/lenders" method="post">
         <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

         <div class="form-group">
            <label for="first_name">First Name:</label>
            <input type="text" name="lender[first_name]" id="first_name" class="form-control" />
         </div>

         <div class="form-group">
            <label for="last_name">Last Name:</label>
            <input type="text" name="lender[last_name]" id="last_name" class="form-control" />
         </div>

         <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="lender[email]" id="email" class="form-control" />
         </div>


         <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="lender[password]" id="password" class="form-control" />
         </div>

         <div class="form-group">
            <label for="money">Money:</label>
            <input type="number" name="lender[money]" min="0" max="500000" step="1" id="money">
         </div>

         <button type="submit" class="btn btn-primary">Register</button>
      </form>
      <a href="/login">Already a Member?</a>
   </div>
   <!-- End Lender Form -->

   <!-- Borrower Form -->
   <div class="col-5">
      <h2>Borrower:</h2>
      <form action="/borrowers" method="post">
         <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

         <div class="form-group">
            <label for="first_name">First Name:</label>
            <input type="text" name="borrower[first_name]" id="first_name" class="form-control" />
         </div>

         <div class="form-group">
            <label for="last_name">Last Name:</label>
            <input type="text" name="borrower[last_name]" id="last_name" class="form-control" />
         </div>

         <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="borrower[email]" id="email" class="form-control" />
         </div>


         <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="borrower[password]" id="password" class="form-control" />
         </div>

         <div class="form-group">
            <label for="need_money_for">Need Money For:</label>
            <input type="text" name="borrower[need_money_for]" id="need_money_for" class="form-control" />
         </div>

         <div class="form-group">
            <label for="description">Description:</label>
            <textarea name="borrower[description]" rows="8" cols="80"></textarea>
         </div>

         <div class="form-group">
            <label for="amount_needed">Amount Needed:</label>
            <input type="number" name="borrower[amount_needed]" min="0" max="10000" step="1" id="amount_needed">
         </div>

         <button type="submit" class="btn btn-primary">Register</button>
      </form>
      <a href="/login">Already a Member?</a>
   </div>
   <!-- End Borrower Form -->
   <div class="col-1"></div>
</div>
